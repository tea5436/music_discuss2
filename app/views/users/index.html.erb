<div class="container">
  <div class="row">
    <dic class="offset-md-2"></dic>
    <div class="col-md-8">
      <table class="table">
        <tr>
          <th>
            <h2>ユーザー一覧</h2>
          </th>
        </tr>
        <tr>
          <td>
            <h6>ユーザーネーム</h6>
          </td>
          <td>
            <h6>ユーザー画像</h6>
          </td>
          <td></td>
        </tr>
      </table>
      <% @users.each do |user| %>
        <table class="table">
          <tr>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= image_tag user.get_profile_image(150,100) %>
            </td>
            <td>
              <%= link_to "詳細", user_path(user.id) %>
            </td>
          </tr>
        </table>
      <% end %>
    <dic class="offset-md-2"></div>
  </dic>
</dic>